---
const {title} = Astro.props
let subtitle = 'Redrox Music Festival 2021'
---

<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <!-- favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.ico">

  <!-- google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;800&display=swap" rel="stylesheet">

  <!-- global css -->
  <link rel="stylesheet" href={Astro.resolve('../styles/globals.css')} />

  <!-- open graph -->
  <meta property="og:title" content="Redrox Music Festival 2021">
  <meta property="og:description"
    content="Redrox Music Festival amplifies voices that have been pushed to the margins of society and celebrates the art of live performance as an act of joy and resistance.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://RedrocksMusic.github.io/2021">
  <!-- meta property="og:image" content="/assets/social-preview-image.png" -->

  <!-- page title -->
  <title>{title} - {subtitle}</title>
</head>

<body>
  <nav>
    <a href="./5">Contents</a>
    <a href="./6">Schedule</a>
  </nav>

  <!-- main -->
  <main id="main-content">

    <slot />

  </main>

</body>

</html>

<style lang="scss">
  // sticky footer on low content pages
  html,
  body {
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
    background-color: var(--background);

    nav {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      background: #61a1bf;
      color: #5d1d13;
      font-weight: bold;
      padding: 0.5em;
    }

    main {
      flex: 1 0 auto;
      margin-top: 1em;
    }
  }
</style>